<Window x:Class="BookstoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreApp"
        xmlns:view="clr-namespace:BookstoreApp.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Name="StockTab" Header="Stock">
                <view:StockView/>
            </TabItem>
            <TabItem Name="BooksTab" Header="Books">
                <view:BookView/>
            </TabItem>
            <TabItem Name="AuthorTab" Header="Author">
                <view:AuthorView/>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
